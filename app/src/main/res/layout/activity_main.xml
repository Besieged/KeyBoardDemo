<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="foodsafe.hb.hxzk.com.keyboarddemo.MainActivity">

    <!--  当之有一个EditText或者AutoCompleteTextView的时候，进入画面时是默认得到焦点的。 要想去除焦点，可以在auto之前加一个0像素的layout，并设置他先得到焦点。 -->
    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <!-- logo-->
        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50px"
            android:src="@mipmap/ic_launcher"
            android:visibility="visible"
            />


        <!-- 账号 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140px"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:layout_marginTop="70px"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_marginLeft="20px"
                android:src="@mipmap/ic_launcher"
                />

            <EditText
                android:id="@+id/edt_account_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请输入账号"
                android:paddingLeft="40px"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140px"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:layout_marginTop="120px"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="90px"
                android:layout_height="100px"
                android:src="@mipmap/ic_launcher"
                android:layout_marginLeft="8dp"
                />

            <EditText
                android:id="@+id/edt_pwd_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入密码"
                android:background="@null"
                android:inputType="textPassword"
                android:paddingLeft="40px"
                />
        </LinearLayout>


        <Button
            android:id="@+id/btn_dologin_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:layout_marginTop="100px"
            android:padding="0dp"
            android:text="登录"
            android:textSize="65px" />



        <RelativeLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />


    </LinearLayout>



</LinearLayout>
